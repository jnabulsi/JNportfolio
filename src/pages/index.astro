---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import ParticlesBg from "../components/ParticlesBg.astro";
---

<BaseLayout title="Jordan Nabulsi â€” Portfolio">
  <Header slot="header" />

  <section class="hero">
    <ParticlesBg />

    <div class="hero-inner">
      <div class="avatar-frame">
        <img class="avatar-img" src="/jordanPhoto.jpg" alt="Jordan Nabulsi" width="140" height="140" />
      </div>


      <h1>Jordan Nabulsi</h1>
      <p class="subtitle">Student, Developer &amp; Software Enthusiast</p>


      <div class="socials">
        <a href="https://github.com/jnabulsi" aria-label="GitHub" target="_blank">
          <i class="fa-brands fa-github"></i>
        </a>

        <a href="https://linkedin.com/in/jordan-nabulsi-8690a7149" aria-label="LinkedIn" target="_blank">
          <i class="fa-brands fa-linkedin"></i>
        </a>

        <a href="mailto:jordanabulsi@gmail.com" aria-label="Email">
          <i class="fa-solid fa-envelope"></i>
        </a>
      </div>

    </div>
  </section>

<style is:global>
  .hero {
      position: relative;
      min-height: 100vh;
      display: grid;
      place-items: center;
      overflow: hidden;
    }

    .hero-inner {
      position: relative;
      z-index: 1;
      text-align: center;
      padding: 1rem 1rem 6rem;
    }


    .avatar-frame {
      width: 140px;
      height: 140px;
      border-radius: 999px;
      overflow: hidden;
      border: 1px solid var(--border);
      background: var(--card);
      margin: 0 auto 1rem;
    }

    .avatar-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1.55);
      transform-origin: center 35%;
      display: block;
    }


    .hero h1 {
      margin: 0.25rem 0 0;
      font-size: clamp(2rem, 4vw, 3rem);
      letter-spacing: -0.02em;
    }

    .subtitle {
      margin: 0.5rem 0 1.25rem;
      color: var(--muted);
      font-size: clamp(1.05rem, 1.8vw, 1.25rem);
    }

    .socials {
      display: flex;
      justify-content: center;
      gap: 1.4rem;
      margin-top: 0.75rem;
    }

    .socials a {
      width: 42px;
      height: 42px;
      display: grid;
      place-items: center;
      color: var(--muted);
      font-size: 1.85rem;
      transition: transform 180ms ease, color 180ms ease;
    }

    .socials a:hover {
      color: var(--fg);
      transform: translateY(-2px) scale(1.15);
    }

    @media (prefers-reduced-motion: reduce) {
      .socials a {
        transition: none;
      }
    }

</style>
  </BaseLayout>
