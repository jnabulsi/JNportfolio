---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
---

<BaseLayout title="Contact — Jordan Nabulsi">
  <Header slot="header" />

  <section class="page">
    <div class="container content">
      <header class="page-header">
        <h1>Contact</h1>
        <p class="lede">
          If you’d like to get in touch about work opportunities, projects, or anything else,
          the easiest way to reach me is below.
        </p>
      </header>

      <div class="contact-list">
        <div class="contact-item">
          <div class="label">Email</div>
          <a href="mailto:jordanabulsi@gmail.com">jordanabulsi@gmail.com</a>
        </div>

        <div class="contact-item">
          <div class="label">GitHub</div>
          <a
            href="https://github.com/jnabulsi"
            target="_blank"
            rel="noopener"
          >
            github.com/jnabulsi
          </a>
        </div>
 
        <div class="contact-item">
          <div class="label">LinkedIn</div>
          <a
            href="https://linkedin.com/in/jordan-nabulsi-8690a7149"
            target="_blank"
            rel="noopener"
          >
            linkedin.com/in/jordan-nabulsi
          </a>
        </div>

     </div>
    </div>
  </section>

  <style is:global>
    .page {
      padding: 3.5rem 0 4rem;
    }

    .content {
      max-width: 760px;
      margin: 0 auto;
    }

    .page-header {
      margin-bottom: 2rem;
      text-align: left;
    }

    .page-header h1 {
      margin: 0 0 0.75rem;
      font-size: clamp(2rem, 3.2vw, 2.6rem);
      letter-spacing: -0.02em;
    }

    .lede {
      margin: 0;
      color: var(--muted);
      font-size: 1.1rem;
      line-height: 1.8;
    }

    .contact-list {
      display: grid;
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .contact-item {
      padding: 1rem 1.1rem;
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 12px;
    }

    .contact-item .label {
      font-size: 0.85rem;
      color: var(--muted);
      margin-bottom: 0.25rem;
    }

    .contact-item a {
      color: var(--fg);
      font-size: 1rem;
      text-decoration: none;
    }

    .contact-item a:hover {
      text-decoration: underline;
    }
  </style>
</BaseLayout>

